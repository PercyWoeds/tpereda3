<p id="notice"><%= notice %></p>

<h1> Requerimientos</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Employee</th>
      <th>Division</th>
      <th>Fecha</th>
      <th>Hora</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @requerimientos.each do |requerimiento| %>
      <tr>
        <td><%= requerimiento.code %></td>
        <td><%= requerimiento.employee.full_name %></td>
        <td><%= requerimiento.division.name  %></td>
        <td><%= requerimiento.fecha.strftime("%d/%m/%Y") %></td>
        <td><%= requerimiento.hora %></td>
        
        <td><%= link_to 'Ver', requerimiento %></td>
        <td><%= link_to 'Editar', edit_requerimiento_path(requerimiento) %></td>

        <td><%= link_to 'Eliminar', requerimiento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
    <div class="extra content">
        <%= link_to 'Nuevo requerimiento', new_requerimiento_path,class:"ui primary button" %> 
        <%= link_to 'Gestionar requerimiento', do_gestion_facturas_path,class:"ui primary button" %> 

         <%= link_to 'Regresar', requerimientos_path,class: "ui primary button" %> 
        
      </div>
      
