<html>
<body>
    

  <font size="2" face="Courier New" >  
  <table style='font-family:"Courier New", Courier, monospace; font-size:80% ;width:100%'>
  
  <tr>
    <td width="100%" align="right"  > TP-CL-F-005 / Version 1</td>
  </tr>
  
  </table>

  <h4 ><center> CONTROL DE VENTAS DEL MES DE <%=  I18n.l(@fecha1.to_date, format: '%B',locale: :es  ) %>  </center>   </h4>
  


  <h5><center>  </center></h5>
  
  
  <font size="2" face="Courier New" >  
  <table style='font-family:"Courier New", Courier, monospace; font-size:120% ;width:100%'>
  
  <tr bgcolor="#B4D7F7">
    <td width="100%"   ><center> <strong> Servicios del : <%= @fecha1 %>  al: <%= @fecha2 %> </strong></center> </td>
  </tr>
  
  </table>

  
  <table style='font-family:"Courier New", Courier, monospace; font-size:80% ;width:100%'>
  <tr bgcolor="#B4D7F7">
    <td width="4%"> Item </td>
    <td width="5%"> Fecha  </td>
    <td width="5%"> Registro </td>
    <td width="18%"> Cliente </td>
    <td width="10%"> Origen </td>
    <td width="10%"> Destino </td>
    <td width= "5%"> IMPORTE S/. </td>

    <td width="5%"> Empaletizado </td>
    <td width="5%"> Montacarga </td>
    <td width="5%"> IMPORTE US$ </td>
    <td width="5%"> Escolta </td>
    <td width="5%"> Stand by </td>
    <td width="5%"> OST </td>
    <td width="5%"> Procesado  </td>
    
    
  </tr>
  </table>

  
  
  <table style='font-family:"Courier New", Courier, monospace; font-size:70% ;width:100%'>
      <% nroitem = 1%>
      <% total_1 =  0%>
      <% total_2 =  0%>
      <% total_3 =  0%>
      <% total_4 =  0%>
      <% total_5 =  0%>
      <% total_6 =  0%>
      <% total_soles =  0%>
      <% total_dolares  =  0%>
     
      
       <% for  manifest in @facturas_rpt  %>

          <tr>
        
          <td width= "4%" ><%=  nroitem  %>   </td>
          <td width = "5%" align ="center"></td>
          <td width= "5%" ></td>
          
          <td width = "18%" align ="left"><%= manifest.customer.name   %> </td>
               
          <td width = "10%" align ="center"></td>
          <td width = "10%" align ="center"></td>

          <td width = "5%" align ="center"><%=  sprintf("%.2f",manifest.importe1) %> </td>
          <td width = "5%" align ="center"><%=  sprintf("%.2f",manifest.importe2) %> </td>
          <td width = "5%" align ="center"><%=  sprintf("%.2f",manifest.importe3) %> </td>
          <td width = "5%" align ="right"><%= sprintf("%.2f",manifest.importe4)   %></td>
          <td width = "5%" align ="right"><%= sprintf("%.2f",manifest.importe5)   %></td>
          <td width = "5%" align ="right"><%= sprintf("%.2f",manifest.importe6)   %></td>
          
        
          <td width = "8%" align ="left"></td>
          <td width = "5%" align ="right"></td>

          </tr>
          <% nroitem += 1 %>  
          <% total_1 += manifest.importe1 %>
          <% total_2 += manifest.importe2 %>
          <% total_3 += manifest.importe3 %>
          <% total_4 += manifest.importe4 %>
          <% total_5 += manifest.importe5 %>
          <% total_6 += manifest.importe5 %>
          
            
         <% end %>

      <hr>  
     </table>
     
     <table style='font-family:"Courier New", Courier, monospace; font-size:80% ;width:100%'>
     <tr bgcolor="#B4D7F7">
          <td width = "57%" align ="center">Totales  </td>
          <td width = "5%" align ="right"><%= sprintf("%.2f",total_1)   %></td>
          <td width = "5%" align ="right"><%= sprintf("%.2f",total_2)   %></td>
          <td width = "5%" align ="right"><%= sprintf("%.2f",total_3)   %></td>
          <td width = "5%" align ="right"><%= sprintf("%.2f",total_4)   %></td>
          <td width = "5%" align ="right"><%= sprintf("%.2f",total_5)   %></td>
          <td width = "5%" align ="right"><%= sprintf("%.2f",total_6)   %></td>
          <td width = "13%" align ="center"> </td>
          
                
    
     </tr>
     </table>

     <% total_soles   = total_1+total_2+total_3 %>
     <% total_dolares = total_4+total_5+total_6 %>
     
     <table style='font-family:"Courier New", Courier, monospace; font-size:100% ;width:100%'>
     <tr bgcolor="#B4D7F7">
     <td width = "50%" align ="center" ><strong>VENTAS DEL : <%= @fecha1 %> AL: <%= @fecha2 %></strong></td>
     <td width = "10%" align ="right"><strong> S/. <%= sprintf("%.3f",total_soles)   %></strong></td>
     </tr>
     </table>

     <table style='font-family:"Courier New", Courier, monospace; font-size:100% ;width:100%'>
     <tr bgcolor="#B4D7F7">
     <td width = "50%" align ="center"><strong> VENTAS DEL : <%= @fecha1 %> AL: <%= @fecha2 %></strong></td>
     <td width = "10%" align ="right"><strong> US$ <%= sprintf("%.2f",total_dolares)   %></td>
     </strong></tr>
     </table>





    
    </body>
      
