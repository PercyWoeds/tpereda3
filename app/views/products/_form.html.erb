<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= hr() %>
  
  <div class="field">
    <strong>Informacion Producto </strong>
  </div>

  <div class="field">
    <%= f.label :name, "Nombre Producto*", :class => "bold" %><br />
    <%= f.text_field :name %>
    <div class="small">
      The name of the product.
    </div>
  </div>
  
  <div class="field">
    <%= f.label :code, "Codigo Producto (UPC/EAN/ISBN)" %><br />
    <%= f.text_field :code %>
    <div class="small">
      If your product has a unique code, for example ISBN, enter it here.
    </div>
  </div>

  <div class="field">
    <%= f.label :products_category_id %><br />
    <%= f.collection_select :products_category_id, @categories, :id, :category, :prompt => true %>
    
    <div class="small">
      You can group products together using categories.
    </div>
  </div>

  
  
  <div class="field">
    <%= f.label :products_lines_id %><br />
    <%= f.collection_select :products_lines_id, @lineas, :id, :name, :prompt => true %>
    
    <div class="small">
      Linea productos
    </div>
  </div>
  

      
  <div class="field">
    <%= f.label :products_grupos_id %><br />
    <%= f.collection_select :products_grupos_id, @grupos, :id, :name, :prompt => true %>
    <div class="small">
        Grupo productos 
    </div>
  </div>
 

  
  <%= hr() %>
  
  
  
  
  <%= hr() %>
  
  <div class="field">
    <strong>Inventario</strong>
  </div>
  
  
  
  <div class="field">
    <%= f.label :unidad_id %><br />
    <%= f.collection_select :unidad_id, @unidads, :id, :descrip, :prompt => true %>
    
  
  </div>
  
  <div class="field">
    <%= f.label :ubicacion,"Ubicacion" %><br />
    <%= f.text_field :ubicacion %>
    <div class="small">
      
    </div>
  </div>

  <div class="field">
    <%= f.label :numparte %><br />
    <%= f.text_field :numparte %>
  </div>
  


  
  <%= hr() %>
  
  <div class="field">
    <strong>Informacion adicional </strong>
  </div>
  
 
  
   <div class="field">
      <%= f.check_box :active%>
      <%= f.label :active ,"Activo?", :class => "bold" %>
      <div class="small">
         Producto activo ?
      </div>
    </div>
    

  <%= hr() %>
  
  <div class="actions">
    <%= f.hidden_field :company_id %>
    <%= f.submit %>
  </div>
    <% end %>
  
  <%= render 'layouts/autocomplete' %>
  
  
  <script type="text/javascript"> 
    $(document).ready(function() {
      $("#product_category").autocomplete("/products/ac_categories/<%= @company.id %>", {
        width: 300,
        selectFirst: false
      });
    });
  </script>
