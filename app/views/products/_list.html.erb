

<% if @products.count > 0 %>
  <table>
    <thead>
      <tr>
        <th class="bordered_right bordered_bottom" style="width: 250px;">
          Nombre
        </th>
        <th class="bordered_right bordered_bottom" style="width: 130px;">
          Code
        </th>
        <th class="bordered_right bordered_bottom">
          Categoria
        </th>
        <th class="bordered_right bordered_bottom">
          Linea
        </th>
        <th class="bordered_right bordered_bottom">
          Grupo
        </th>
       
        <th class="bordered_right bordered_bottom">
          Price
        </th>
        <th class="bordered_right bordered_bottom" colspan="3">
          Options
        </th>
      </tr>
    </thead>
    <tbody>
      <% for product in @products %>
        <tr>
          <td class="bordered_right bordered_bottom">
            <%= link_to product.name, product, :title => "Go to product" %>
          </td>
          <td class="bordered_right bordered_bottom">
            <% if product.code and product.code != "" %>
              <%= product.code %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="bordered_right bordered_bottom">
            <% if product.products_category  %>
              <%= product.products_category.category  %>
            <% else %>
              &nbsp;
            <% end %>
          </td>

          <td class="bordered_right bordered_bottom">
            <% if product.products_line %>
             <%= product.products_line.name  %>
            <% else %>
              &nbsp;
            <% end %>
          </td>

          <td class="bordered_right bordered_bottom right">
          
            <% if product.products_grupo %>
               <%= product.products_grupo.name  %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          
          <td><%= link_to 'Ver', product %></td>
           <% if @current_user.level == "admin"%>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        
         
        <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Are you sure?' }
         %></td>
         <% end %>
          
        </tr>
      <% end %>
    </tbody>
  </table>



 
<% else %>
  <p class="error">
    We couldn't find any products.
  </p>
<% end %>
