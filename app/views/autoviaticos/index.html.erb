<p id="notice"><%= notice %></p>

<h1>Listing Autoviaticos</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Empleado</th>
      <th>Fecha</th>
      <th>Tema</th>
      <th>Proveedores</th>
      <th>Asunto</th>
      <th>Importe</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @autoviaticos.each do |autoviatico| %>
      <tr>
        <td><%= autoviatico.code %></td>
        <td><%= autoviatico.employee_id %></td>
        <td><%= autoviatico.fecha.strftime("%d/%m/%Y") %></td>
        <td><%= autoviatico.tema %></td>
        <td><%= autoviatico.supplier.name %></td>
        <td><%= autoviatico.asunto %></td>
        
        <td><%= autoviatico.total  %></td>
        
        
        <td><%= link_to 'Ver', autoviatico %></td>

        <% if   autoviatico.processed != nil %>
        <td><%= link_to 'Editar', edit_autoviatico_path(autoviatico) %></td>
        <%end %>

         <% if current_email ="percywoeds@gmail.com"%> 
        <td><%= link_to 'Eliminar ', autoviatico, method: :delete, data: { confirm: 'Are you sure?' } %>
          
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

