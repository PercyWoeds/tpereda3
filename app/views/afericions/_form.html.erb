<%= simple_form_for(@afericion) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <div class="field">
      <%= f.label :fecha, "Fecha ", :class => "bold" %><br />
      <%= f.date_field :fecha %>
    </div>

    
    <div class="field">
      <%= f.label :turno,"Turno "%><br>
      <%= f.select :turno, options_for_select([["TURNO 1",1],["TURNO 2",2],["TURNO 3",3]]) %>

    </div>
    
        
    <div class="field">
    <%= f.label :employee_id,"Empleado *"%><br>
    <%= f.collection_select :employee_id, @employees, :id, :full_name, :prompt => true %>
    </div>
    
    <div class="field">
    <%= f.label :tanque_id,"Tanque:* "%><br>
    <%= f.collection_select :tanque_id, @tanques, :id, :code, :prompt => true %>
    
    </div>
    
    <div class="field">
    <%= f.label :documento, "Documento:" %><br />
    <%= f.text_field :documento %>
    </div>
    <div class="field">
    <%= f.label :quantity, "Cantidad:" %><br />
    <%= f.number_field :quantity , class: :text_field, step: :any %>
    </div>
  
    <div class="field">
    <%= f.label :importe, "Importe:" %><br />
    <%= f.number_field :importe , class: :text_field, step: :any %>
    </div>
  
    <div class="field">
    <%= f.label :concepto, "Concepto:" %><br />
    <%= f.text_field :concepto %>
    </div>
  
    
    
    
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
