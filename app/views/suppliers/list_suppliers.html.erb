<div class="breadcrumbs">
  <%= link_to "My companies", "/companies" %> &raquo;
  <%= link_to @company.name, @company %>
</div>

<h1>
  <%= image_tag("supplier_48.png", :class => "vmiddle") %>
  Proveedores 
</h1>

<div class="small">
  <form method="get" action="/companies/suppliers/<%= @company.id %>">
    <strong>Search:</strong>
    <input type="text" name="search" value="<% if @q_org %><%= @q_org %><% end %>" class="small" style="width: 250px;" onclick="$(this).select();" />
    <input type="submit" value="Find" class="bold small_btn" />
    <a href="/companies/suppliers/<%= @company.id %>" class="small_btn">Clear</a>
  </form>
</div>

<%= render "suppliers/list" %>

<br />

<div class="button">
  <%= link_to 'Nuevo proveedor', "/suppliers/new/#{@company.id}" %>
</div>

<div class="button">
  <%= link_to 'Carga desde Sunat ', "/suppliers/new2/#{@company.id}" %>
  
</div>



<h2>Importar Archivo proveedores "*.csv"</h2>

<%= form_tag import_suppliers_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar " %>
<% end %>


 Download:
 
  <%= link_to "CSV", suppliers_path(format: "csv"), multipart: true  %> 
 
<%= will_paginate @suppliers %>

